<?xml version="1.0" encoding="utf-8"?>


<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mainbg"
    tools:context=".Music">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Music Genres"
            android:textSize="50dp"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_centerHorizontal="true"
            app:layout_constraintVertical_bias="0.075" />

        <Button
            android:id="@+id/btnMChart"
            android:layout_width="165dp"
            android:layout_height="100dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="140dp"
            android:text="Chart Hits"
            android:textSize="20dp"
            />

        <Button
            android:id="@+id/btnMHip"
            android:layout_width="165dp"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_marginTop="140dp"
            android:text="Hip Hop"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btnMChill"
            android:layout_width="165dp"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="240dp"
            android:text="Chilled"
            android:textSize="20dp" />


        <Button
            android:id="@+id/btnMClass"
            android:layout_width="165dp"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_marginTop="240dp"
            android:text="Classical"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btnMRock"
            android:layout_width="165dp"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="340dp"
            android:text="Rock"
            android:textSize="20dp" />


        <Button
            android:id="@+id/btnMIndRock"
            android:layout_width="165dp"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_marginTop="340dp"
            android:text="Indie Rock"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btnMMellow"
            android:layout_width="165dp"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="440dp"
            android:text="Mellow"
            android:textSize="20dp" />


        <Button
            android:id="@+id/btnMHappy"
            android:layout_width="165dp"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_marginTop="440dp"
            android:text="Happy"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btnMPop"
            android:layout_width="165dp"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="540dp"
            android:text="Pop"
            android:textSize="20dp" />


        <Button
            android:id="@+id/btnMWorkout"
            android:layout_width="165dp"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_marginTop="540dp"
            android:text="Workout"
            android:textSize="20dp" />

    </RelativeLayout>




</ScrollView>